<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.index.IndexFragment">

    <!--基金搜索-->
    <RelativeLayout
        android:id="@+id/rl_name_search"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_67"
        android:background="@color/color_main"
        android:paddingTop="@dimen/dimen_22">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_35"
            android:layout_marginLeft="@dimen/dimen_20"
            android:layout_marginRight="@dimen/dimen_20"
            android:layout_marginTop="@dimen/dimen_5"
            android:background="@drawable/shape_index_name_search">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dimen_10"
                android:drawableLeft="@mipmap/icon_back"
                android:text="  搜索基金名称/代码"
                android:textColor="@color/white" />

        </FrameLayout>


    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_name_search">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <!--轮播banner-->
            <cn.droidlover.xdroidmvp.banner.FlyBanner
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_150" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_10"
                android:background="@color/color_e7e7e7" />

            <!--年化收益 登录 注册-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_15"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_marginTop="@dimen/dimen_15"
                android:orientation="horizontal">

                <View
                    android:layout_width="@dimen/dimen_5"
                    android:layout_height="match_parent"
                    android:background="@color/color_main" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dimen_5"
                    android:text="明星基金"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/text_size_18" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dimen_20">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_30">

                    <TextView
                        android:id="@+id/tv_seven_earnings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/color_f7182d"
                        android:textSize="@dimen/text_size_22" />

                    <TextView
                        android:id="@+id/tv_qiri"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_seven_earnings"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dimen_10"
                        android:text="近一年收益率"
                        android:textColor="@color/color_666666"
                        android:textSize="@dimen/text_size_14" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_10">

                    <TextView
                        android:id="@+id/tv_wan_earnings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/text_size_22" />


                    <Button
                        android:layout_width="@dimen/dimen_120"
                        android:layout_height="@dimen/dimen_30"
                        android:layout_below="@id/tv_wan_earnings"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dimen_10"
                        android:background="@drawable/index_buy_shape"
                        android:text="@string/buy"
                        android:textColor="@color/color_666666"
                        android:textSize="@dimen/text_size_16" />

                </RelativeLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_10"
                android:background="@color/color_e7e7e7" />

            <!--专题-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_15"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_marginTop="@dimen/dimen_15"
                android:orientation="horizontal">

                <View
                    android:layout_width="@dimen/dimen_5"
                    android:layout_height="match_parent"
                    android:background="@color/color_main" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dimen_5"
                    android:text="微银专题"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_18" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_20"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_marginRight="@dimen/dimen_10"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dimen_80"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:background="@color/color_f7182d"
                    android:scaleType="fitXY" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dimen_80"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:background="@color/color_main"
                    android:scaleType="fitXY" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dimen_80"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:background="@color/colorAccent"
                    android:scaleType="fitXY" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_10"
                android:background="@color/color_e7e7e7" />

            <!--人气产品-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_15"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_marginTop="@dimen/dimen_15"
                android:orientation="horizontal">

                <View
                    android:layout_width="@dimen/dimen_5"
                    android:layout_height="match_parent"
                    android:background="@color/color_main" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dimen_5"
                    android:layout_weight="1"
                    android:text="人气产品"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/text_size_18" />

                <TextView
                    android:id="@+id/popularity_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dimen_15"
                    android:text="更多 >"
                    android:textColor="@color/color_main" />

            </LinearLayout>

            <cn.droidlover.xrecyclerview.XRecyclerView
                android:id="@+id/xrv_popularity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_10"
                android:layout_marginTop="@dimen/dimen_15"
                android:background="@color/color_e7e7e7" />

            <!--指数基金-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_15"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_marginTop="@dimen/dimen_15"
                android:orientation="horizontal">

                <View
                    android:layout_width="@dimen/dimen_5"
                    android:layout_height="match_parent"
                    android:background="@color/color_main" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dimen_5"
                    android:text="指数基金"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/text_size_18" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dimen_20">

                <RelativeLayout
                    android:layout_width="@dimen/dimen_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_nvshen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text=""
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/text_size_14" />

                    <TextView
                        android:id="@+id/tv_nvshen_shouyi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_nvshen"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dimen_10"
                        android:text=""
                        android:textColor="@color/color_f7182d"
                        android:textSize="@dimen/text_size_16" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_nvshen_shouyi"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dimen_10"
                        android:text="近一年收益率"
                        android:textColor="@color/color_666666"
                        android:textSize="@dimen/text_size_14" />

                </RelativeLayout>

                <View
                    android:layout_width="@dimen/dimen_1"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/dimen_10"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:background="@color/color_e7e7e7" />

                <RelativeLayout
                    android:layout_width="@dimen/dimen_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_chihuo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text=""
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/text_size_14" />

                    <TextView
                        android:id="@+id/tv_chihuo_shouyi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_chihuo"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dimen_10"
                        android:text=""
                        android:textColor="@color/color_f7182d"
                        android:textSize="@dimen/text_size_16" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_chihuo_shouyi"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dimen_10"
                        android:text="近一年收益率"
                        android:textColor="@color/color_666666"
                        android:textSize="@dimen/text_size_14" />

                </RelativeLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_10"
                android:background="@color/color_e7e7e7" />

            <!--优选定投-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_15"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_marginTop="@dimen/dimen_15"
                android:orientation="horizontal">

                <View
                    android:layout_width="@dimen/dimen_5"
                    android:layout_height="match_parent"
                    android:background="@color/color_main" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dimen_5"
                    android:layout_weight="1"
                    android:text="优选定投"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/text_size_18" />

                <TextView
                    android:id="@+id/timing_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dimen_15"
                    android:text="更多 >"
                    android:textColor="@color/color_main" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/preferred_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/text_size_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:id="@+id/preferred_rate"
                    android:text=""
                    android:textColor="@color/color_f7182d"
                    android:textSize="@dimen/text_size_22" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:text="近一年收益率"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/text_size_14" />

                <Button
                    android:layout_width="@dimen/dimen_180"
                    android:layout_height="@dimen/dimen_35"
                    android:layout_marginTop="@dimen/dimen_10"
                    style="@style/common_blue_button"
                    android:text="立即定投"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_16"
                    android:textStyle="bold" />

            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</RelativeLayout>
