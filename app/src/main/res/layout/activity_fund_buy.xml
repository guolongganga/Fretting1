<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/layout_head"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="@dimen/dimen_10"
            android:background="@color/white"
            android:paddingLeft="45dp">
            <!--银行logo-->
            <ImageView
                android:id="@+id/bank_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_launcher_round"/>
            <!--银行名称和尾号 招商银行(2339)-->
            <TextView
                android:id="@+id/bank_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/bank_image"
                android:text="招商银行(2339)"
                android:textColor="@color/color_text_333"
                android:textSize="14dp"/>
            <!--限额 单笔上限10万，单日限额50万-->
            <TextView
                android:id="@+id/bank_limit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/bank_name"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/bank_image"
                android:text="单笔上限10万，单日限额50万"
                android:textColor="@color/color_text_333"
                android:textSize="@dimen/dimen_12"/>
            <!--更换-->
            <TextView
                android:gravity="center"
                android:id="@+id/tv_change"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/color_1862b7"
                android:background="@null"
                android:text="@string/fund_change"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="@dimen/dimen_10"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <!--金额-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_30"
                android:layout_marginRight="@dimen/dimen_30"
                android:text="@string/fund_amount"/>
            <!--金额输入-->
            <EditText
                android:id="@+id/et_amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="最低购买金额XX元"
                android:inputType="number"
                android:textColor="@color/color_333333"
                android:textColorHint="@color/color_696969"
                android:textSize="@dimen/text_size_14"/>
        </LinearLayout>
        <!--申购费XX%-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_30"
            android:layout_marginTop="@dimen/dimen_20"
            android:text="申购费XX%"
            android:textColor="@color/color_696969"
            android:textSize="@dimen/text_size_14"/>
        <!--15点前买入将按照12月15日净值确认份额-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_30"
            android:text="15点前买入将按照12月15日净值确认份额"
            android:textColor="@color/color_696969"
            android:textSize="@dimen/text_size_14"/>
        <!--12月18日可查看份额信息，12月19号可查看收益-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_30"
            android:text="12月18日可查看份额信息，12月19号可查看收益"
            android:textColor="@color/color_696969"
            android:textSize="@dimen/text_size_14"/>
        <!--确认购买-->
        <Button
            android:id="@+id/sure"
            style="@style/common_blue_button"
            android:text="@string/fund_sure"
            android:textSize="@dimen/text_size_14"/>


    </LinearLayout>
    <!--公司提供-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dimen_10"
        android:text="@string/fund_support"
        android:textColor="@color/color_f7182d"/>
</RelativeLayout>
