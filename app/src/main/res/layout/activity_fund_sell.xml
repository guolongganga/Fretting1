<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/layout_head"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="@dimen/dimen_10"
            android:background="@color/white"
            android:paddingLeft="45dp">
            <!--银行logo-->
            <ImageView
                android:id="@+id/bank_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"/>
            <!--银行名称和尾号 招商银行(2339)-->
            <TextView
                android:id="@+id/bank_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/bank_image"
                android:text=""
                android:textColor="@color/color_text_333"
                android:textSize="14dp"/>
            <!--限额 单笔上限10万，单日限额50万-->
            <TextView
                android:id="@+id/bank_limit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/bank_name"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/bank_image"
                android:text=""
                android:textColor="@color/color_text_333"
                android:textSize="@dimen/dimen_12"/>
            <!--更换-->
            <TextView
                android:id="@+id/tv_change"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:gravity="center"
                android:text="@string/fund_change"
                android:textColor="@color/color_1862b7"/>

        </RelativeLayout>

        <!--申购费XX%-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/dimen_10"
            android:paddingLeft="@dimen/dimen_30"
            android:paddingTop="@dimen/dimen_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="可用份额："
                android:textColor="@color/color_696969"
                android:textSize="@dimen/text_size_14"/>

            <TextView
                android:id="@+id/available_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="24.55"
                android:textColor="@color/color_f7182d"
                android:textSize="@dimen/text_size_14"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="份"
                android:textColor="@color/color_f7182d"
                android:textSize="@dimen/text_size_14"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="@dimen/dimen_10"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <!--金额-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_30"
                android:layout_marginRight="@dimen/dimen_30"
                android:text="@string/fund_amount"/>
            <!--金额输入-->
            <EditText
                android:id="@+id/et_amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入卖出份额"
                android:inputType="number"
                android:textColor="@color/color_333333"
                android:textColorHint="@color/color_696969"
                android:textSize="@dimen/text_size_14"/>

            <Button
                android:id="@+id/btn_all_share"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:paddingLeft="@dimen/dimen_15"
                android:paddingRight="@dimen/dimen_15"
                android:text="全部份额"
                android:textColor="@color/color_f7182d"/>
        </LinearLayout>

        <!--确认购买-->
        <Button
            android:id="@+id/sure"
            style="@style/common_blue_button_circle"
            android:text="立即卖出"
            android:textSize="@dimen/text_size_14"/>


    </LinearLayout>
    <!--公司提供-->
    <!--<TextView-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_alignParentBottom="true"-->
    <!--android:layout_centerHorizontal="true"-->
    <!--android:layout_marginBottom="@dimen/dimen_10"-->
    <!--android:text="@string/fund_support"-->
    <!--android:textColor="@color/color_f7182d"/>-->
</RelativeLayout>
