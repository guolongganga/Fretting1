<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_content"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_30"
        android:background="@drawable/shape_blue_line_rect"
        android:paddingTop="@dimen/dimen_10"
        android:paddingBottom="@dimen/dimen_10"
        android:gravity="center"
        android:text="申购"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/text_size_14"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_10"
        android:layout_marginRight="@dimen/dimen_10"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_fund_name"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="XXXXXX基金"
            android:textColor="@color/color_333333"
            android:ellipsize="end"
            android:singleLine="true"
            android:textSize="@dimen/text_size_14"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_fund_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:text="050001"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_size_14"/>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017-12-10 17:59"
            android:textColor="@color/color_696969"
            android:textSize="@dimen/text_size_14"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="125元"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_size_14"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10"
            android:ellipsize="end"
            android:singleLine="true"
            android:gravity="right"
            android:text="份额信息确认中"
            android:textColor="@color/color_696969"
            android:textSize="@dimen/text_size_14"
            android:visibility="visible"/>
    </LinearLayout>

    <!--<ImageView-->
        <!--android:id="@+id/iv_arrow"-->
        <!--android:layout_marginLeft="@dimen/dimen_10"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:src="@mipmap/icon_common_arrow"/>-->
    <View
        android:layout_width="30dp"
        android:layout_height="wrap_content"/>
</LinearLayout>