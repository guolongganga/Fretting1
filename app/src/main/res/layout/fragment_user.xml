<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/white"
             android:orientation="vertical"
             tools:context=".ui.fragment.user.UserFragment">
    <!--头部标题-->
    <include layout="@layout/layout_head"/>

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="66dp"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <!--总资产字体-->
                        <TextView
                            android:id="@+id/font_total"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_20"
                            android:text="@string/user_total_assets"
                            android:textColor="@color/color_696969"
                            android:textSize="@dimen/text_size_18"/>
                        <!--总资产-->
                        <TextView
                            android:id="@+id/tv_total_assets"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/font_total"
                            android:layout_centerHorizontal="true"
                            android:text="--.--"
                            android:textColor="@color/color_text_333"
                            android:textSize="@dimen/text_size_18"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_40">
                        <!--在途资产字体-->
                        <TextView
                            android:id="@+id/font_passage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_20"
                            android:text="@string/user_passage"
                            android:textColor="@color/color_696969"
                            android:textSize="@dimen/text_size_18"/>

                        <!--在途资产-->
                        <TextView
                            android:id="@+id/tv_passage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/font_passage"
                            android:layout_centerHorizontal="true"
                            android:text="--.--"
                            android:textColor="@color/color_text_333"
                            android:textSize="@dimen/text_size_18"/>
                    </RelativeLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:paddingRight="@dimen/dimen_15">
                        <!--昨日收益字体-->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/user_yesterday_earn"
                            android:textColor="@color/color_696969"
                            android:textSize="@dimen/text_size_14"/>
                        <!--昨日收益-->
                        <TextView
                            android:id="@+id/tv_yesterday_income"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_5"
                            android:text="--.--"
                            android:textColor="@color/color_696969"
                            android:textSize="@dimen/text_size_14"
                            />
                    </LinearLayout>

                    <!--收益时间（12/04）-->
                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="（12/04）"
                        android:textColor="@color/color_696969"
                        android:textSize="@dimen/text_size_14"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/dimen_15">
                        <!--累计收益字体-->
                        <TextView
                            android:id="@+id/tv_time_accumlate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="累计收益"
                            android:textColor="@color/color_696969"
                            android:textSize="@dimen/text_size_14"/>
                        <!--累计收益-->
                        <TextView
                            android:id="@+id/tv_accumulate_earn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_5"
                            android:text="--.--"
                            android:textColor="@color/color_696969"
                            android:textSize="@dimen/text_size_14"
                            />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
            <!--快速入口-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="@dimen/dimen_10"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <!--自选-->
                <TextView
                    android:id="@+id/self_choose"
                    style="@style/user_text_top_image"
                    android:drawableTop="@mipmap/icon_find_want_one"
                    android:text="@string/user_self_choose"/>
                <!--定投-->
                <TextView
                    android:id="@+id/timing"
                    style="@style/user_text_top_image"
                    android:drawableTop="@mipmap/icon_my_benefit"
                    android:text="@string/user_timing"/>
                <!--交易查询-->
                <TextView
                    android:id="@+id/transaction"
                    style="@style/user_text_top_image"
                    android:drawableTop="@mipmap/icon_my_coupon"
                    android:text="@string/user_transaction"/>
                <!--分红-->
                <TextView
                    android:id="@+id/profit"
                    style="@style/user_text_top_image"
                    android:drawableTop="@mipmap/icon_my_crash"
                    android:text="@string/user_profit"/>
                <!--撤单-->
                <TextView
                    android:id="@+id/remove"
                    style="@style/user_text_top_image"
                    android:drawableTop="@mipmap/icon_my_learn"
                    android:text="@string/user_remove"/>

            </LinearLayout>
            <!--分割线-->
            <include layout="@layout/layout_divider_horizontal"/>

            <!--如果未开户则不显示这个-->
            <LinearLayout
                android:id="@+id/ll_fund_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!--滑动标签栏-->
                <android.support.design.widget.TabLayout
                    android:id="@+id/tab_layout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_40"
                    android:layout_below="@+id/rl_title"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/white"
                    app:tabGravity="center"
                    app:tabIndicatorColor="@color/color_main"
                    app:tabMode="fixed"
                    app:tabSelectedTextColor="@color/color_main"
                    app:tabTextAppearance="@style/MyTabLayoutTextAppearanceInverse"
                    app:tabTextColor="@color/color_2A2A2A"/>

                <!--分割线-->
                <View style="@style/divider_half_e7"/>
                <!--页卡-->
                <com.zhsoft.fretting.ui.widget.CustomViewPager
                    android:id="@+id/view_pager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"/>
            </LinearLayout>

            <!--未开户显示去开户-->
            <Button
                android:id="@+id/to_finish_register"
                style="@style/common_blue_button_circle"
                android:layout_width="150dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dimen_70"
                android:text="您还未开户，去开户"
                android:visibility="gone"
                />

            <!--我的基金-->
            <!--<cn.droidlover.xrecyclerview.XRecyclerView-->
            <!--android:id="@+id/xrv_my_fund"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:overScrollMode="never"-->
            <!--android:visibility="gone"/>-->

            <!--<TextView-->
            <!--android:id="@+id/tv_empty"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity="center_horizontal"-->
            <!--android:layout_marginBottom="@dimen/dimen_70"-->
            <!--android:layout_marginTop="@dimen/dimen_70"-->
            <!--android:text="您还没有持仓"-->
            <!--android:visibility="gone"-->
            <!--/>-->

        </LinearLayout>
    </ScrollView>

    <!--<inclactivity_bank_listyouactivity_bank_listyout/dialog_logout"/>-->
    <!--设置clickable="true" 可以避免点击上层触发底层-->
    <!--登录注册-->
    <LinearLayout
        android:id="@+id/ll_logout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dimen_66"
        android:background="@color/white"
        android:clickable="true"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:src="@mipmap/logo"/>

        <Button
            android:id="@+id/login"
            style="@style/common_blue_button_circle"
            android:layout_width="150dp"
            android:text="立即登录"/>

        <Button
            android:id="@+id/register"
            style="@style/common_blue_button_circle"
            android:layout_width="150dp"
            android:layout_marginTop="20dp"
            android:text="10秒开户"/>
    </LinearLayout>

</FrameLayout>
