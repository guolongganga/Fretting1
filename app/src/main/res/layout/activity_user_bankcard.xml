<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">
    <!--我的银行卡 信息-->
    <include layout="@layout/layout_head"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="30dp"/>

    <include layout="@layout/layout_divider_horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_48"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dimen_30"
        android:paddingRight="@dimen/dimen_30">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/ic_launcher_round"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="招商银行（尾号4535）"
            android:textColor="@color/color_text_333"
            android:textSize="@dimen/text_size_14"/>

    </LinearLayout>

    <include layout="@layout/layout_divider_horizontal"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <include layout="@layout/layout_divider_horizontal"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_48"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dimen_30"
        android:paddingRight="@dimen/dimen_30">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="交易账号"
            android:textColor="@color/color_696969"
            android:textSize="@dimen/text_size_14"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="00993322344"
            android:textColor="@color/color_696969"
            android:textSize="@dimen/text_size_14"/>
    </RelativeLayout>

    <include layout="@layout/layout_divider_horizontal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_30"
        android:layout_marginRight="@dimen/dimen_30"
        android:layout_marginTop="30dp"
        android:text="注：若您账户在持仓或者在途交易期间，则不能更换银行卡"
        android:textColor="@color/color_696969"
        android:textSize="@dimen/text_size_12"
        />

    <Button
        android:layout_gravity="center_horizontal"
        android:layout_width="@dimen/dimen_200"
        android:text="更换银行卡"
        style="@style/common_blue_button"/>
</LinearLayout>