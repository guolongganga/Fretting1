<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/layout_head"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_f7f7f7"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:text="个人信息"
                android:textColor="@color/color_696969"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/small_margin_size"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="姓名"
                    android:textColor="@color/color_text_333"
                    android:textSize="@dimen/text_size_14"/>

                <EditText
                    android:id="@+id/user_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入姓名"
                    android:inputType="number"
                    android:maxLength="11"
                    android:singleLine="true"
                    android:textColorHint="@color/color_696969"
                    android:textSize="@dimen/text_size_14"
                    />

            </LinearLayout>

            <include layout="@layout/layout_divider_horizontal"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/small_margin_size"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="身份证号"
                    android:textColor="@color/color_text_333"
                    android:textSize="@dimen/text_size_14"/>

                <EditText
                    android:id="@+id/identity"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入身份证号"
                    android:inputType="number"
                    android:maxLength="11"
                    android:singleLine="true"
                    android:textColorHint="@color/color_696969"
                    android:textSize="@dimen/text_size_14"
                    />

            </LinearLayout>

            <include layout="@layout/layout_divider_horizontal"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/small_margin_size"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="邮箱(可选)"
                    android:textColor="@color/color_text_333"
                    android:textSize="@dimen/text_size_14"/>

                <EditText
                    android:id="@+id/email"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入邮箱"
                    android:inputType="number"
                    android:maxLength="11"
                    android:singleLine="true"
                    android:textColorHint="@color/color_696969"
                    android:textSize="@dimen/text_size_14"
                    />

            </LinearLayout>

            <include layout="@layout/layout_divider_horizontal"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:text="银行卡信息"
                android:textColor="@color/color_696969"/>

            <LinearLayout
                android:id="@+id/ll_choose_bank"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/small_margin_size"
                android:paddingRight="@dimen/small_margin_size">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="银行名称"
                    android:textColor="@color/color_text_333"
                    android:textSize="@dimen/text_size_14"/>

                <TextView
                    android:id="@+id/banck_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请选择"
                    android:textColorHint="@color/color_696969"
                    android:textColor="@color/color_text_333"
                    android:textSize="@dimen/text_size_14"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_common_arrow"/>

            </LinearLayout>

            <include layout="@layout/layout_divider_horizontal"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/small_margin_size"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="银行卡号"
                    android:textColor="@color/color_text_333"
                    android:textSize="@dimen/text_size_14"/>

                <EditText
                    android:id="@+id/banknumber"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入银行卡号"
                    android:inputType="number"
                    android:maxLength="11"
                    android:singleLine="true"
                    android:textColorHint="@color/color_696969"
                    android:textSize="@dimen/text_size_14"
                    />

            </LinearLayout>

            <include layout="@layout/layout_divider_horizontal"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/small_margin_size"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="手机号"
                    android:textColor="@color/color_text_333"
                    android:textSize="@dimen/text_size_14"/>

                <EditText
                    android:id="@+id/phone"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入预留手机号"
                    android:inputType="number"
                    android:maxLength="11"
                    android:singleLine="true"
                    android:textColorHint="@color/color_696969"
                    android:textSize="@dimen/text_size_14"
                    />

            </LinearLayout>

            <include layout="@layout/layout_divider_horizontal"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/small_margin_size"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="验证码"
                    android:textColor="@color/color_text_333"
                    android:textSize="@dimen/text_size_14"/>

                <EditText
                    android:id="@+id/msg_code"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入验证码"
                    android:inputType="number"
                    android:maxLength="11"
                    android:singleLine="true"
                    android:textColorHint="@color/color_696969"
                    android:textSize="@dimen/text_size_14"
                    />

                <com.zhsoft.fretting.ui.widget.CountdownButton
                    android:id="@+id/get_verify_code"
                    style="@style/AppTheme.Button_send_code"/>

            </LinearLayout>

            <include layout="@layout/layout_divider_horizontal"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_35"
                android:layout_marginRight="@dimen/dimen_35"
                android:layout_marginTop="@dimen/dimen_15"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/register_service_select"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/register_iv_select"/>

                <TextView
                    android:id="@+id/register_service"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_weight="1"
                    android:text="我同意《xxx协议》"
                    android:textColor="@color/color_f7182d"/>

            </LinearLayout>

            <Button
                android:id="@+id/btn_next"
                style="@style/common_blue_button"
                android:text="下一步"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>




