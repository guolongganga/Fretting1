<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent">
    <!--标题-->
    <include layout="@layout/layout_head"/>
    <!--我的银行卡 更换银行卡-->
    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="66dp"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_f7f7f7"
            android:orientation="vertical">

            <!--个人信息-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:text="个人信息"
                android:textColor="@color/color_696969"/>
            <!--姓名-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/small_margin_size"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:text="姓名"
                    android:textColor="@color/color_text_333"
                    android:textSize="@dimen/text_size_14"/>
                <!--请输入姓名-->
                <EditText
                    android:id="@+id/user_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入姓名"
                    android:inputType="number"
                    android:maxLength="11"
                    android:singleLine="true"
                    android:textColorHint="@color/color_696969"
                    android:textSize="@dimen/text_size_14"
                    />

            </LinearLayout>

            <include layout="@layout/layout_divider_horizontal"/>

            <!--身份证号-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/small_margin_size"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:text="身份证号"
                    android:textColor="@color/color_text_333"
                    android:textSize="@dimen/text_size_14"/>
                <!--请输入身份证号-->
                <EditText
                    android:id="@+id/identity"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入身份证号"
                    android:inputType="number"
                    android:maxLength="11"
                    android:singleLine="true"
                    android:textColorHint="@color/color_696969"
                    android:textSize="@dimen/text_size_14"
                    />

            </LinearLayout>

            <include layout="@layout/layout_divider_horizontal"/>

            <!--邮箱-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/small_margin_size"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:text="邮箱(可选)"
                    android:textColor="@color/color_text_333"
                    android:textSize="@dimen/text_size_14"/>
                <!--请输入邮箱-->
                <EditText
                    android:id="@+id/email"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入邮箱"
                    android:inputType="number"
                    android:maxLength="11"
                    android:singleLine="true"
                    android:textColorHint="@color/color_696969"
                    android:textSize="@dimen/text_size_14"
                    />

            </LinearLayout>

            <include layout="@layout/layout_divider_horizontal"/>

            <!--银行卡信息-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:text="银行卡信息"
                android:textColor="@color/color_696969"/>

            <LinearLayout
                android:id="@+id/ll_choose_bank"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/small_margin_size"
                android:paddingRight="@dimen/small_margin_size">
                <!--银行名称-->
                <TextView
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:text="银行名称"
                    android:textColor="@color/color_text_333"
                    android:textSize="@dimen/text_size_14"/>
                <!--显示选择的银行-->
                <TextView
                    android:id="@+id/banck_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请选择"
                    android:textColor="@color/color_text_333"
                    android:textColorHint="@color/color_696969"
                    android:textSize="@dimen/text_size_14"/>
                <!--小箭头-->
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_common_arrow"/>

            </LinearLayout>

            <include layout="@layout/layout_divider_horizontal"/>
            <!--银行卡号-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/small_margin_size"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:text="银行卡号"
                    android:textColor="@color/color_text_333"
                    android:textSize="@dimen/text_size_14"/>
                <!--请输入银行卡号-->
                <EditText
                    android:id="@+id/banknumber"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入银行卡号"
                    android:inputType="number"
                    android:maxLength="11"
                    android:singleLine="true"
                    android:textColorHint="@color/color_696969"
                    android:textSize="@dimen/text_size_14"
                    />

            </LinearLayout>

            <include layout="@layout/layout_divider_horizontal"/>
            <!--手机号-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/small_margin_size"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:text="手机号"
                    android:textColor="@color/color_text_333"
                    android:textSize="@dimen/text_size_14"/>
                <!--请输入预留手机号-->
                <EditText
                    android:id="@+id/phone"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入预留手机号"
                    android:inputType="number"
                    android:maxLength="11"
                    android:singleLine="true"
                    android:textColorHint="@color/color_696969"
                    android:textSize="@dimen/text_size_14"
                    />

            </LinearLayout>

            <include layout="@layout/layout_divider_horizontal"/>
            <!--验证码-->
            <!--<LinearLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="48dp"-->
            <!--android:background="@color/white"-->
            <!--android:gravity="center_vertical"-->
            <!--android:orientation="horizontal"-->
            <!--android:paddingLeft="@dimen/small_margin_size"-->
            <!--android:paddingRight="15dp">-->

            <!--<TextView-->
            <!--android:layout_width="70dp"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="验证码"-->
            <!--android:textColor="@color/color_text_333"-->
            <!--android:textSize="@dimen/text_size_14"/>-->
            <!--&lt;!&ndash;请输入验证码&ndash;&gt;-->
            <!--<EditText-->
            <!--android:id="@+id/msg_code"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_weight="1"-->
            <!--android:background="@null"-->
            <!--android:hint="请输入验证码"-->
            <!--android:inputType="number"-->
            <!--android:maxLength="11"-->
            <!--android:singleLine="true"-->
            <!--android:textColorHint="@color/color_696969"-->
            <!--android:textSize="@dimen/text_size_14"-->
            <!--/>-->
            <!--&lt;!&ndash;获取验证码&ndash;&gt;-->
            <!--<com.zhsoft.fretting.ui.widget.CountdownButton-->
            <!--android:id="@+id/get_verify_code"-->
            <!--style="@style/AppTheme.Button_send_code"/>-->

            <!--</LinearLayout>-->

            <!--设置交易密码-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:text="设置交易密码"
                android:textColor="@color/color_696969"/>

            <include layout="@layout/layout_divider_horizontal"/>
            <!--新交易密码-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/small_margin_size"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:text="交易密码"
                    android:textColor="@color/color_text_333"
                    android:textSize="@dimen/text_size_14"/>
                <!--小眼睛点击-->
                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    app:hintEnabled="false"
                    app:passwordToggleDrawable="@drawable/ck_user_eyes_selector"
                    app:passwordToggleEnabled="true">
                    <!--新交易密码输入-->
                    <EditText
                        android:id="@+id/password"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:gravity="center_vertical"
                        android:hint="请输入新的六位纯数字"
                        android:inputType="numberPassword"
                        android:maxLength="6"
                        android:singleLine="true"
                        android:textColor="@color/color_text_333"
                        android:textColorHint="@color/color_696969"
                        android:textSize="@dimen/text_size_14"/>

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <include layout="@layout/layout_divider_horizontal"/>
            <!--再次输入交易密码-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/small_margin_size"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:text="确认交易密码"
                    android:textColor="@color/color_text_333"
                    android:textSize="@dimen/text_size_14"/>
                <!--小眼睛点击-->
                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    app:hintEnabled="false"
                    app:passwordToggleDrawable="@drawable/ck_user_eyes_selector"
                    app:passwordToggleEnabled="true">
                    <!--再次输入交易密码-->
                    <EditText
                        android:id="@+id/password_again"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:gravity="center_vertical"
                        android:hint="请确认新的六位纯数字"
                        android:inputType="numberPassword"
                        android:maxLength="6"
                        android:singleLine="true"
                        android:textColor="@color/color_text_333"
                        android:textColorHint="@color/color_696969"
                        android:textSize="@dimen/text_size_14"/>

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <include layout="@layout/layout_divider_horizontal"/>
            <!--协议-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_35"
                android:layout_marginRight="@dimen/dimen_35"
                android:layout_marginTop="@dimen/dimen_15"
                android:orientation="horizontal">
                <!--勾选框-->
                <ImageView
                    android:id="@+id/register_service_select"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/register_iv_select"/>
                <!--我同意《xxx协议》-->
                <TextView
                    android:id="@+id/register_service"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_weight="1"
                    android:text="我同意《xxx协议》"
                    android:textColor="@color/color_f7182d"/>

            </LinearLayout>

            <include layout="@layout/layout_divider_horizontal"/>

            <!--下一步-->
            <Button
                android:id="@+id/btn_save"
                style="@style/common_blue_button"
                android:text="保 存"/>

        </LinearLayout>
    </ScrollView>
</FrameLayout>




