<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!--<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"-->
    <!--xmlns:app="http://schemas.android.com/apk/res-auto"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:background="@color/color_f7f7f7"-->
    <!--android:orientation="vertical">-->

    <include layout="@layout/layout_head"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="66dp"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/small_margin_size"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="手机号"
                    android:textColor="@color/color_text_333"
                    android:textSize="@dimen/text_size_14"/>

                <EditText
                    android:id="@+id/phone_number"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入手机号"
                    android:inputType="number"
                    android:maxLength="11"
                    android:singleLine="true"
                    android:textColorHint="@color/color_696969"
                    android:textSize="@dimen/text_size_14"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/small_margin_size"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="登录密码"
                    android:textColor="@color/color_text_333"
                    android:textSize="@dimen/text_size_14"/>

                <!--<EditText-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_height="match_parent"-->
                <!--android:layout_weight="1"-->
                <!--android:background="@null"-->
                <!--android:hint="请输入登录密码"-->
                <!--android:inputType="number"-->
                <!--android:maxLength="11"-->
                <!--android:singleLine="true"-->
                <!--android:textColorHint="@color/color_696969"-->
                <!--android:textSize="@dimen/text_size_14"-->
                <!--/>-->
                <!--眼睛的点击-->
                <android.support.design.widget.TextInputLayout
                    app:hintEnabled="false"
                    app:passwordToggleDrawable="@drawable/ck_user_eyes_selector"
                    app:passwordToggleEnabled="true"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent">
                    <!--设置密码-->
                    <EditText
                        android:id="@+id/password"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:gravity="center_vertical"
                        android:hint="@string/user_register_password_hint"
                        android:inputType="textPassword"
                        android:maxLength="16"
                        android:singleLine="true"
                        android:textColor="@color/color_text_333"
                        android:textColorHint="@color/color_696969"
                        android:textSize="@dimen/text_size_14"/>

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/small_margin_size"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="确认密码"
                    android:textColor="@color/color_text_333"
                    android:textSize="@dimen/text_size_14"/>

                <android.support.design.widget.TextInputLayout
                    app:hintEnabled="false"
                    app:passwordToggleDrawable="@drawable/ck_user_eyes_selector"
                    app:passwordToggleEnabled="true"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent">
                    <!--设置密码-->
                    <EditText
                        android:id="@+id/password_again"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:gravity="center_vertical"
                        android:hint="@string/user_register_password_hint_again"
                        android:inputType="textPassword"
                        android:maxLength="16"
                        android:singleLine="true"
                        android:textColor="@color/color_text_333"
                        android:textColorHint="@color/color_696969"
                        android:textSize="@dimen/text_size_14"/>

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/small_margin_size"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="验证码"
                    android:textColor="@color/color_text_333"
                    android:textSize="@dimen/text_size_14"/>

                <EditText
                    android:id="@+id/msg_code"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入验证码"
                    android:inputType="number"
                    android:maxLength="11"
                    android:singleLine="true"
                    android:textColorHint="@color/color_696969"
                    android:textSize="@dimen/text_size_14"
                    />

                <com.zhsoft.fretting.ui.widget.CountdownButton
                    android:id="@+id/get_verify_code"
                    style="@style/AppTheme.Button_send_code"/>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="@dimen/small_margin_size"
                android:layout_marginRight="@dimen/small_margin_size"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/to_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="选择已有账户登录>>"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_14"/>

                <TextView
                    android:id="@+id/message_fail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="无法收到验证码?"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_14"/>

            </RelativeLayout>

            <Button
                android:id="@+id/btn_next"
                style="@style/common_blue_button"
                android:layout_marginBottom="50dp"
                android:text="下一步"/>
        </LinearLayout>
    </ScrollView>
</FrameLayout>

    <!--</LinearLayout>-->