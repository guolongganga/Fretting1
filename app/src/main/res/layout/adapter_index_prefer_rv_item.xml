<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <!--优选定投-->
    <TextView
        android:id="@+id/preferred_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/color_333333"
        android:textSize="@dimen/text_size_24"/>

    <TextView
        android:id="@+id/preferred_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10"
        android:text=""
        android:textColor="@color/color_f7182d"
        android:textSize="@dimen/text_size_22"/>

    <TextView
        android:id="@+id/tv_rate_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10"
        android:text=""
        android:textColor="@color/color_666666"
        android:textSize="@dimen/text_size_14"/>

    <Button
        android:id="@+id/btn_invest"
        style="@style/common_blue_button_circle"
        android:layout_width="@dimen/dimen_180"
        android:layout_height="@dimen/dimen_35"
        android:layout_marginBottom="@dimen/dimen_30"
        android:layout_marginTop="@dimen/dimen_10"
        android:text="立即定投"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_16"
        android:textStyle="bold"/>

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1"
        android:layout_below="@id/tv_location_one"
        android:layout_marginBottom="@dimen/dimen_20"
        android:layout_marginLeft="@dimen/dimen_15"
        android:background="@color/color_e7e7e7"/>

</LinearLayout>