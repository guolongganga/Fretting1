<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/rl_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dimen_15"
                android:paddingTop="@dimen/dimen_15">
    <!--人气产品-->
    <TextView
        android:id="@+id/tv_value"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:textColor="@color/color_f7182d"
        android:textSize="@dimen/text_size_26"/>

    <TextView
        android:id="@+id/tv_describe"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_value"
        android:text="近一年的收益率"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/text_size_12"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_value"
        android:layout_marginLeft="@dimen/dimen_25"
        android:layout_toRightOf="@id/tv_value"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/text_size_22"/>

    <TextView
        android:id="@+id/tv_location_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_title"
        android:layout_below="@id/tv_title"
        android:background="@drawable/shape_text_bg"
        android:paddingLeft="@dimen/dimen_3"
        android:paddingRight="@dimen/dimen_3"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/text_size_12"/>

    <TextView
        android:id="@+id/tv_location_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_location_one"
        android:layout_marginLeft="@dimen/dimen_10"
        android:layout_toRightOf="@id/tv_location_one"
        android:background="@drawable/shape_text_bg"
        android:paddingLeft="@dimen/dimen_3"
        android:paddingRight="@dimen/dimen_3"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/text_size_12"/>

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1"
        android:layout_below="@id/tv_location_one"
        android:layout_marginTop="@dimen/dimen_20"
        android:background="@color/color_e7e7e7"/>

</RelativeLayout>