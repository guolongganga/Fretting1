<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent">
    <!--标题-->
    <include layout="@layout/layout_head"/>
    <!--变更密码-交易密码-->
    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="66dp"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="30dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_5"
                android:layout_marginLeft="@dimen/dimen_15"
                android:layout_marginTop="@dimen/dimen_5"
                android:text="注：密码长度为6位纯数字，但不能含3个连续相同，3个以上（含3个）的连续数字"
                android:textColor="@color/color_696969"
                android:textSize="@dimen/text_size_14"/>

            <include layout="@layout/layout_divider_horizontal"/>
            <!--旧交易密码-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/small_margin_size"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:text="@string/user_update_tradepwd_old"
                    android:textColor="@color/color_text_333"
                    android:textSize="@dimen/text_size_14"/>
                <!--小眼睛点击-->
                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    app:hintEnabled="false"
                    app:passwordToggleDrawable="@drawable/ck_user_eyes_selector"
                    app:passwordToggleEnabled="true">
                    <!--输入旧的交易密码-->
                    <EditText
                        android:id="@+id/oldpassword"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:gravity="center_vertical"
                        android:hint="@string/user_update_tradepwd_old_hint"
                        android:inputType="numberPassword"
                        android:maxLength="6"
                        android:singleLine="true"
                        android:textColor="@color/color_text_333"
                        android:textColorHint="@color/color_696969"
                        android:textSize="@dimen/text_size_14"/>

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <include layout="@layout/layout_divider_horizontal"/>
            <!--新交易密码-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/small_margin_size"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:text="@string/user_update_tradepwd_new"
                    android:textColor="@color/color_text_333"
                    android:textSize="@dimen/text_size_14"/>
                <!--小眼睛点击-->
                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    app:hintEnabled="false"
                    app:passwordToggleDrawable="@drawable/ck_user_eyes_selector"
                    app:passwordToggleEnabled="true">
                    <!--新交易密码输入-->
                    <EditText
                        android:id="@+id/password"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:gravity="center_vertical"
                        android:hint="@string/user_update_tradepwd_new_hint"
                        android:inputType="numberPassword"
                        android:maxLength="6"
                        android:singleLine="true"
                        android:textColor="@color/color_text_333"
                        android:textColorHint="@color/color_696969"
                        android:textSize="@dimen/text_size_14"/>

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <include layout="@layout/layout_divider_horizontal"/>
            <!--再次输入交易密码-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/small_margin_size"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:text="@string/user_update_tradepwd_new_again"
                    android:textColor="@color/color_text_333"
                    android:textSize="@dimen/text_size_14"/>
                <!--小眼睛点击-->
                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    app:hintEnabled="false"
                    app:passwordToggleDrawable="@drawable/ck_user_eyes_selector"
                    app:passwordToggleEnabled="true">
                    <!--再次输入交易密码-->
                    <EditText
                        android:id="@+id/password_again"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:gravity="center_vertical"
                        android:hint="@string/user_update_tradepwd_new_again_hint"
                        android:inputType="numberPassword"
                        android:maxLength="6"
                        android:singleLine="true"
                        android:textColor="@color/color_text_333"
                        android:textColorHint="@color/color_696969"
                        android:textSize="@dimen/text_size_14"/>

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <include layout="@layout/layout_divider_horizontal"/>

            <!--重置交易密码-->
            <TextView
                android:id="@+id/reset_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:background="@android:color/transparent"
                android:padding="@dimen/dimen_15"
                android:text="@string/user_update_tradepwd_reset"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_14"/>

            <!--保存-->
            <Button
                android:id="@+id/btn_save"
                style="@style/common_blue_button"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="35dp"
                android:text="@string/user_common_save"/>

        </LinearLayout>
    </ScrollView>
</FrameLayout>