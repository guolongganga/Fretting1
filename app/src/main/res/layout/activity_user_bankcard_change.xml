<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">
    <!--标题-->
    <include layout="@layout/layout_head"/>
    <!--我的银行卡 更换银行卡-->
    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="66dp"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="30dp"/>

            <include layout="@layout/layout_divider_horizontal"/>
            <!--选择银行-->
            <LinearLayout
                android:id="@+id/ll_choose_bank"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/small_margin_size"
                android:paddingRight="@dimen/small_margin_size">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="银行名称"
                    android:textColor="@color/color_text_333"
                    android:textSize="@dimen/text_size_14"/>

                <!--银行名称显示-->
                <TextView
                    android:id="@+id/banck_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请选择"
                    android:textColor="@color/color_text_333"
                    android:textColorHint="@color/color_696969"
                    android:textSize="@dimen/text_size_14"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_common_arrow"/>

            </LinearLayout>

            <include layout="@layout/layout_divider_horizontal"/>

            <!--银行卡号-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/small_margin_size"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="银行卡号"
                    android:textColor="@color/color_text_333"
                    android:textSize="@dimen/text_size_14"/>
                <!--银行卡号输入-->
                <EditText
                    android:id="@+id/banknumber"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入银行卡号"
                    android:inputType="number"
                    android:maxLength="30"
                    android:singleLine="true"
                    android:textColorHint="@color/color_696969"
                    android:textSize="@dimen/text_size_14"
                    />

            </LinearLayout>

            <include layout="@layout/layout_divider_horizontal"/>

            <!--手机号-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/small_margin_size"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="手机号"
                    android:textColor="@color/color_text_333"
                    android:textSize="@dimen/text_size_14"/>
                <!--手机号输入-->
                <EditText
                    android:id="@+id/phone"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入预留手机号"
                    android:inputType="number"
                    android:maxLength="11"
                    android:singleLine="true"
                    android:textColorHint="@color/color_696969"
                    android:textSize="@dimen/text_size_14"
                    />

            </LinearLayout>

            <include layout="@layout/layout_divider_horizontal"/>
            <!--验证码-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/small_margin_size"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="验证码"
                    android:textColor="@color/color_text_333"
                    android:textSize="@dimen/text_size_14"/>
                <!--验证码输入-->
                <EditText
                    android:id="@+id/msg_code"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入验证码"
                    android:inputType="number"
                    android:maxLength="11"
                    android:singleLine="true"
                    android:textColorHint="@color/color_696969"
                    android:textSize="@dimen/text_size_14"
                    />
                <!--获取验证码-->
                <com.zhsoft.fretting.ui.widget.CountdownButton
                    android:id="@+id/get_verify_code"
                    style="@style/AppTheme.Button_send_code"/>

            </LinearLayout>

            <include layout="@layout/layout_divider_horizontal"/>

            <!--保存-->
            <Button
                android:id="@+id/btn_save"
                style="@style/common_blue_button"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="50dp"
                android:text="保存"/>
        </LinearLayout>
    </ScrollView>
</FrameLayout>