<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--启动页的Theme 没状态栏全屏-->
    <style name="NoTitle_FullScreen" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!--启动页的Theme-->
    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <!--弹出框-->
    <style name="Dialog" parent="android:style/Theme.Dialog">
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <!-- 发送验证码 -->
    <style name="AppTheme.Button_send_code">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:text">@string/user_common_send_code</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:gravity">center</item>
    </style>

    <!--蓝色圆角按钮-->
    <style name="common_blue_button_circle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_marginLeft">@dimen/small_margin_size</item>
        <item name="android:layout_marginRight">@dimen/small_margin_size</item>
        <item name="android:layout_marginTop">50dp</item>
        <item name="android:layout_marginBottom">50dp</item>
        <item name="android:background">@drawable/shape_rect_red_btn</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:gravity">center</item>
    </style>

    <!--蓝色圆角按钮 居于底部-->
    <style name="common_blue_button_rect">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <!--用户设置 横条-->
    <style name="user_setting_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_48</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawableRight">@mipmap/icon_common_arrow</item>
        <item name="android:paddingLeft">@dimen/dimen_30</item>
        <item name="android:drawablePadding">@dimen/dimen_30</item>
        <item name="android:paddingRight">@dimen/dimen_30</item>
        <item name="android:textColor">@color/color_text_333</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!--用户已登录界面 自选，定投，交易查询，分红，撤单-->
    <style name="user_text_top_image">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">@dimen/dimen_5</item>
        <item name="android:textColor">@color/color_text_333</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!--设置TabLayout的字体大小-->
    <style name="MyTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="MyTabLayoutTextAppearanceInverse" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColor">@android:color/holo_red_light</item>
    </style>

    <!--弹出地址和职务选择器动画-->
    <style name="AnimBottom" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/bottom_enter</item>
        <item name="android:windowExitAnimation">@anim/bottom_exit</item>
    </style>

    <style name="blue_short_rect">
        <item name="android:layout_width">@dimen/dimen_4</item>
        <item name="android:layout_height">@dimen/dimen_12</item>
        <item name="android:layout_marginLeft">@dimen/dimen_15</item>
        <item name="android:layout_marginRight">@dimen/dimen_8</item>
        <item name="android:background">@color/color_4D7BFE</item>
    </style>

    <style name="divider_10dp_f9">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_10</item>
        <item name="android:background">@color/color_F9F9F9</item>
    </style>

    <style name="divider_1dp_f8">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_1</item>
        <item name="android:background">@color/color_F8F8F8</item>
    </style>

</resources>
