<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--启动页的Theme 没状态栏全屏-->
    <style name="NoTitle_FullScreen" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!--启动页的Theme-->
    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <!-- 发送验证码 -->
    <style name="AppTheme.Button_send_code">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:text">@string/user_text_send_code</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:gravity">center</item>
    </style>
    <!--蓝色圆角按钮-->
    <style name="common_blue_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_marginLeft">@dimen/small_margin_size</item>
        <item name="android:layout_marginRight">@dimen/small_margin_size</item>
        <item name="android:layout_marginTop">50dp</item>
        <item name="android:layout_marginBottom">50dp</item>
        <item name="android:background">@drawable/shape_blue_btn</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:gravity">center</item>
    </style>
    <!--用户设置 横条-->
    <style name="user_setting_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_48</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawableRight">@mipmap/icon_common_arrow</item>
        <item name="android:paddingLeft">@dimen/dimen_30</item>
        <item name="android:drawablePadding">@dimen/dimen_30</item>
        <item name="android:paddingRight">@dimen/dimen_30</item>
        <item name="android:textColor">@color/color_text_333</item>
        <item name="android:textSize">14sp</item>
    </style>


</resources>
